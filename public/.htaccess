<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # 1. Fichiers physiques → servir normalement
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 2. API → Laravel (MATCH STRICT)
    RewriteRule ^api(/.*)?$ index.php [L,QSA]

    # 3. Toutes les autres routes → Angular
    RewriteRule ^.*$ index.html [L]
</IfModule>


